@page
@model HabitTracker.Pages.TodayModel
@{
    ViewData["Title"] = "Today's Habits";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">ðŸ“… Today's Habits</h1>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Habit</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var habit in Model.HabitsToday)
            {
                <tr>
                    <td>@habit.Name</td>
                    <td>
                        <form method="post" asp-page-handler="Toggle">
                            <input type="hidden" name="id" value="@habit.Id" />
                            <button type="submit" class="btn btn-sm @(habit.IsCompleted ? "btn-success" : "btn-outline-secondary")">
                                @(habit.IsCompleted ? "âœ” Done" : "Mark as done")
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a asp-page="/AddHabit" class="btn btn-primary btn-lg">âž• Add New Habit</a>
    </div>
</div>
