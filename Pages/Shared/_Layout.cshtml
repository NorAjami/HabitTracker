<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - HabitTracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <header class="bg-dark text-white p-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">🌱 HabitTracker</h1>
            <nav>
                <a asp-page="/Index" class="btn btn-outline-light me-2">🏠 Home</a>
                <a asp-page="/Today" class="btn btn-outline-light me-2">📅 Today's Habits</a>
                <a asp-page="/AddHabit" class="btn btn-success">➕ Add Habit</a>
            </nav>
        </div>
    </header>

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-5">
        <small>Made with 💖 by NorAjami</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
