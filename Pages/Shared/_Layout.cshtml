<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - HabitTracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
        }

        .card, .table {
            background-color: #1f1f1f;
            border: none;
            border-radius: 1rem;
        }

        a, .btn {
            border-radius: 0.75rem;
        }

        .btn-primary {
            background-color: #6f42c1;
            border-color: #6f42c1;
        }

        .btn-success {
            background-color: #198754;
            border-color: #198754;
        }

        .lead {
            font-size: 1.25rem;
            color: #bbbbbb;
        }
    </style>
</head>
<body>
    <header class="p-3 bg-black border-bottom">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0 text-light">🌱 HabitTracker</h1>
            <nav>
                <a asp-page="/Index" class="btn btn-outline-light me-2">🏠 Home</a>
                <a asp-page="/Today" class="btn btn-outline-light me-2">📅 Today's Habits</a>
                <a asp-page="/AddHabit" class="btn btn-success">➕ Add Habit</a>
            </nav>
        </div>
    </header>

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-4 mt-5">
        <small>Built with 💜 by NorAjami</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
